#! /bin/sh

PATH="`pwd`/../bin:$PATH"
export PATH

(
set -x
test -h share || ln -sf .. share || exit 1
rm -rf tmp 
FW_ROOT=`pwd` fw-init --name=tmp                              \
                      --revision=none                         \
                      --build_type=flass                      \
                      --template=fw-build                     || exit 1
cd tmp
test -h fw.local || ln -sf ../fw.local fw.local || exit 1
./bootstrap || exit 1
./build || exit 1
"@GMAKE@" -s check || exit 1

"@GMAKE@" -s maintainer-clean
test -z "`find . -name '*.am'`" || exit 1
) > test-template-fw-build.out 2>&1 || exit 1

rm share
rm -rf tmp
